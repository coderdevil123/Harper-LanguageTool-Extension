{
  "manifest_version": 3,
  "name": "Harper + LanguageTool",
  "version": "1.0.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage", "activeTab"],
  
  "host_permissions": [
    "http://10.10.10.36:8081/*",
    "<all_urls>"
  ],

  "action": {
    "default_popup": "public/popup.html",
    "default_icon": "icons/icon48.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}