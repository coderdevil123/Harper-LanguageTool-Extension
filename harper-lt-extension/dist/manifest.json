{
  "manifest_version": 3,
  "name": "Harper + LanguageTool Extension",
  "version": "1.0.0",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage", "activeTab"],
  
  "host_permissions": [
    "http://10.10.10.36:8081/*",
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },

  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "assets/harper-worker.js",
        "assets/harper-init.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}